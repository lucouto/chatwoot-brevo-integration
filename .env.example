# Port for the server (default: 3000)
PORT=3000

# Brevo API Key (required)
# Get it from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# Chatwoot API Configuration (required for fetching contact email)
# Get Access Token from: Chatwoot Settings → Applications → Access Tokens
CHATWOOT_URL=https://chatwoot.cheminneuf.community
CHATWOOT_API_KEY=your_chatwoot_access_token_here
CHATWOOT_ACCOUNT_ID=1

# Optional: Token to protect our API endpoints (optional in development)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# CHATWOOT_API_TOKEN=your_generated_token_here
